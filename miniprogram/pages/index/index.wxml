<view class="container">
  <view class="form">
    <text class="label">URL</text>
    <input type="text" class="url-input" placeholder="请输入网页地址" confirm-type="go" model:value="{{url}}" bind:confirm="openURL" />
  </view>

  <view class="form">
    <text class="label">Email</text>
    <input type="text" class="url-input" placeholder="请输入电子邮箱" confirm-type="go" model:value="{{email}}" bind:confirm="openEmail" />
  </view>
  <view class="link" bind:tap="scan">扫描网页二维码</view>

  <button class="button" type="primary" bind:tap="openURL">打开网页</button>
  <button class="button button-after" bind:tap="openEmail">发送邮件</button>
</view>
